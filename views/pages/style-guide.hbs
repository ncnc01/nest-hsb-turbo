<script>
// Style Guide Interactive Functions
function toggleView(viewId) {
  // Get the section containing this view
  const section = document.getElementById(viewId).closest('section');
  const exampleView = section.querySelector('[id$="-example"]');
  const codeView = section.querySelector('[id$="-code"]');
  const toggles = section.querySelectorAll('.view-toggle');
  
  // Hide all views in this section
  exampleView.classList.add('hidden');
  codeView.classList.add('hidden');
  
  // Show the selected view
  document.getElementById(viewId).classList.remove('hidden');
  
  // Update toggle buttons
  toggles.forEach(toggle => {
    toggle.classList.remove('active', 'bg-white/20');
    toggle.classList.add('bg-white/10', 'text-white/70');
  });
  
  // Activate the clicked toggle
  const activeToggle = section.querySelector(`[onclick="toggleView('${viewId}')"]`);
  if (activeToggle) {
    activeToggle.classList.remove('bg-white/10', 'text-white/70');
    activeToggle.classList.add('active', 'bg-white/20', 'text-white');
  }
}

// Copy code to clipboard
function copyCode(elementId) {
  const element = document.getElementById(elementId);
  const text = element.textContent || element.innerText;
  
  navigator.clipboard.writeText(text).then(() => {
    // Show toast notification
    if (window.Toast) {
      window.Toast.success('코드가 클립보드에 복사되었습니다!');
    } else {
      // Fallback notification
      const button = document.querySelector(`[onclick="copyCode('${elementId}')"]`);
      const originalText = button.innerHTML;
      button.innerHTML = '<i class="fas fa-check"></i> Copied!';
      button.classList.add('text-green-400');
      
      setTimeout(() => {
        button.innerHTML = originalText;
        button.classList.remove('text-green-400');
      }, 2000);
    }
  }).catch(err => {
    console.error('클립보드 복사 실패:', err);
    if (window.Toast) {
      window.Toast.error('클립보드 복사에 실패했습니다.');
    }
  });
}

