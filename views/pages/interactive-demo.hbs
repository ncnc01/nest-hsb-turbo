window.addListItem = function() {
  const newItem = HBS.getState('newItem');
  if (!newItem || newItem.trim() === '') return;
  
  const currentList = HBS.getState('listItems') || [];
  currentList.push({
    id: Date.now(),
    text: newItem.trim(),
    completed: false
