  HBS.setState('listItems', currentList);
  HBS.setState('newItem', '');
  
  // ì…ë ¥ í•„ë“œ ë¹„ìš°ê¸°
  const input = document.querySelector('[data-hbs-input="newItem"]');
  if (input) input.value = '';
};

