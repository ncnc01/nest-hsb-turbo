<!-- Developer Tools Main Page -->
<div class="min-h-screen bg-gray-50">
  <!-- Header Section -->
  <div class="bg-white shadow-sm border-b border-gray-200 mb-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="flex items-center space-x-4">
        <div class="bg-gradient-to-br from-purple-500 to-indigo-600 p-3 rounded-xl">
          <i class="fas fa-tools text-white text-2xl"></i>
        </div>
        <div>
          <h1 class="text-3xl font-bold text-gray-900">{{title}}</h1>
          <p class="text-gray-600 mt-1">{{subtitle}}</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Tools Grid -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      
      <!-- Interaction Logger Card -->
      <a href="/dev-tools/interaction-logger" class="group">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 hover:shadow-lg hover:border-indigo-300 transition-all duration-200">
          <div class="flex items-start space-x-4">
            <div class="bg-gradient-to-br from-blue-500 to-cyan-600 p-3 rounded-lg">
              <i class="fas fa-chart-line text-white text-xl"></i>
            </div>
            <div class="flex-1">
              <h3 class="text-lg font-semibold text-gray-900 group-hover:text-indigo-600">
                Interaction Logger
              </h3>
              <p class="text-sm text-gray-600 mt-1">
                브라우저 상호작용 종합 로깅 시스템
              </p>
              <div class="flex flex-wrap gap-2 mt-3">
                <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-blue-100 text-blue-700">
                  <i class="fas fa-mouse-pointer mr-1"></i> 클릭
                </span>
                <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-green-100 text-green-700">
                  <i class="fas fa-arrows-alt-v mr-1"></i> 스크롤
                </span>
                <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-purple-100 text-purple-700">
                  <i class="fas fa-keyboard mr-1"></i> 키보드
                </span>
              </div>
            </div>
          </div>
        </div>
      </a>

      <!-- API Tester Card (Coming Soon) -->
      <div class="opacity-60 cursor-not-allowed">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
          <div class="flex items-start space-x-4">
            <div class="bg-gradient-to-br from-gray-400 to-gray-500 p-3 rounded-lg">
              <i class="fas fa-network-wired text-white text-xl"></i>
            </div>
            <div class="flex-1">
              <h3 class="text-lg font-semibold text-gray-900">
                API Tester
              </h3>
              <p class="text-sm text-gray-600 mt-1">
                API 엔드포인트 테스트 도구
              </p>
              <div class="mt-3">
                <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-gray-100 text-gray-600">
                  <i class="fas fa-clock mr-1"></i> Coming Soon
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Performance Monitor Card (Coming Soon) -->
      <div class="opacity-60 cursor-not-allowed">
