            <div class="bg-gradient-to-br from-gray-400 to-gray-500 p-3 rounded-lg">
              <i class="fas fa-plug text-white text-xl"></i>
            </div>
            <div class="flex-1">
              <h3 class="text-lg font-semibold text-gray-900">
                Socket Monitor
              </h3>
              <p class="text-sm text-gray-600 mt-1">
                WebSocket 연결 모니터링
              </p>
              <div class="mt-3">
                <span class="inline-flex items-center px-2 py-1 rounded-md text-xs font-medium bg-gray-100 text-gray-600">
                  <i class="fas fa-clock mr-1"></i> Coming Soon
                </span>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Log Viewer Card (Coming Soon) -->
      <div class="opacity-60 cursor-not-allowed">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
          <div class="flex items-start space-x-4">
            <div class="bg-gradient-to-br from-gray-400 to-gray-500 p-3 rounded-lg">
              <i class="fas fa-file-alt text-white text-xl"></i>
            </div>
            <div class="flex-1">
              <h3 class="text-lg font-semibold text-gray-900">
                Log Viewer
              </h3>
              <p class="text-sm text-gray-600 mt-1">
