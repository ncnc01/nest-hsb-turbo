{{#> layouts/error title="페이지를 찾을 수 없습니다"}}

<div class="min-h-screen bg-gradient-to-br from-slate-900 via-purple-900 to-slate-900 relative">
  
  <!-- 상단 브랜딩 -->
  <div class="absolute top-6 left-6 z-10">
    <div class="flex items-center">
      <div class="w-10 h-10 bg-white bg-opacity-20 backdrop-blur-sm rounded-xl flex items-center justify-center border border-white border-opacity-30">
        <i class="fas fa-crown text-white text-lg"></i>
      </div>
      <div class="ml-3">
        <h1 class="text-white font-bold text-lg tracking-wide">Admin Panel</h1>
        <p class="text-white text-opacity-60 text-sm">관리 시스템</p>
      </div>
    </div>
  </div>

  <!-- 홈 링크 -->
  <div class="absolute top-6 right-6 z-10">
    <a 
      href="/dashboard" 
      class="flex items-center px-4 py-2 bg-white bg-opacity-10 backdrop-blur-sm text-white rounded-lg border border-white border-opacity-20 hover:bg-opacity-20 transition-all duration-200"
    >
      <i class="fas fa-home mr-2"></i>
      <span class="font-medium">대시보드</span>
    </a>
  </div>
  
  <!-- 메인 404 콘텐츠 -->
  <div class="flex items-center justify-center min-h-screen p-4">
    <div class="text-center">
      <!-- 404 숫자 -->
      <div class="mb-8">
        <h1 class="text-9xl font-bold text-white opacity-80">
          4<span class="text-purple-400">0</span>4
        </h1>
      </div>
      
      <!-- 메시지 -->
      <div class="mb-8">
        <h2 class="text-3xl font-bold text-white mb-4">
          페이지를 찾을 수 없습니다
        </h2>
        <p class="text-gray-400 text-lg mb-2">
          요청하신 페이지가 존재하지 않거나 이동되었습니다.
        </p>
        <p class="text-gray-500 text-sm">
          <code class="bg-gray-800 px-2 py-1 rounded">{{path}}</code>
        </p>
      </div>
      
      <!-- 버튼들 -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-8">
        <button
          onclick="history.back()"
          class="px-6 py-3 bg-gray-700 hover:bg-gray-600 text-white rounded-lg font-medium transition-colors"
        >
          <i class="fas fa-arrow-left mr-2"></i>
          이전 페이지
        </button>
        
        <a
          href="/dashboard"
          class="px-6 py-3 bg-purple-600 hover:bg-purple-700 text-white rounded-lg font-medium transition-colors inline-block"
        >
          <i class="fas fa-home mr-2"></i>
          홈으로 이동
        </a>
      </div>
      
      <!-- 추천 페이지 -->
      <div class="mt-12 pt-8 border-t border-gray-700">
        <p class="text-gray-400 mb-4">자주 찾는 페이지</p>
        <div class="flex flex-wrap justify-center gap-3">
          <a href="/dashboard" class="text-purple-400 hover:text-purple-300 transition-colors">
            <i class="fas fa-tachometer-alt mr-1"></i> 대시보드
          </a>
          <span class="text-gray-600">•</span>
          <a href="/interactive-demo" class="text-purple-400 hover:text-purple-300 transition-colors">
            <i class="fas fa-play mr-1"></i> Interactive Demo
          </a>
          <span class="text-gray-600">•</span>
          <a href="/ui-demo" class="text-purple-400 hover:text-purple-300 transition-colors">
            <i class="fas fa-sparkles mr-1"></i> UI Demo
          </a>
          <span class="text-gray-600">•</span>
          <a href="/style-guide" class="text-purple-400 hover:text-purple-300 transition-colors">
            <i class="fas fa-palette mr-1"></i> Style Guide
          </a>
        </div>
      </div>
    </div>
  </div>
  
  <!-- 애니메이션 배경 효과 -->
  <div class="fixed inset-0 pointer-events-none">
    <div class="absolute top-20 left-20 w-72 h-72 bg-purple-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob"></div>
    <div class="absolute top-40 right-20 w-72 h-72 bg-pink-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob animation-delay-2000"></div>
    <div class="absolute bottom-20 left-1/2 w-72 h-72 bg-blue-500 rounded-full mix-blend-multiply filter blur-xl opacity-20 animate-blob animation-delay-4000"></div>
  </div>
</div>

<style>
@keyframes blob {
  0%, 100% {
    transform: translate(0px, 0px) scale(1);
  }
  33% {
    transform: translate(30px, -50px) scale(1.1);
  }
  66% {
    transform: translate(-20px, 20px) scale(0.9);
  }
}

.animate-blob {
  animation: blob 7s infinite;
}

.animation-delay-2000 {
  animation-delay: 2s;
}

.animation-delay-4000 {
  animation-delay: 4s;
}

/* 404 숫자 애니메이션 */
@keyframes pulse {
  0%, 100% {
    opacity: 0.8;
  }
  50% {
    opacity: 1;
  }
}

h1 {
  animation: pulse 2s ease-in-out infinite;
}
</style>

<script>
// 키보드 단축키
document.addEventListener('keydown', function(e) {
  if (e.key === 'Escape') {
    history.back();
  } else if (e.key === 'Enter') {
    window.location.href = '/dashboard';
  }
});

// 404 숫자에 호버 효과
document.addEventListener('DOMContentLoaded', function() {
  const title = document.querySelector('h1');
  if (title) {
    title.style.cursor = 'pointer';
    title.addEventListener('click', function() {
      // 이스터 에그: 404 클릭 시 회전
      this.style.transform = 'rotate(360deg)';
      this.style.transition = 'transform 0.5s';
      setTimeout(() => {
        this.style.transform = 'rotate(0deg)';
      }, 500);
      
      // Toast 알림 (있으면)
      if (window.Toast) {
        const messages = [
          '404는 그냥 숫자일 뿐이에요 😊',
          '페이지가 숨바꼭질 중입니다 🙈',
          '여기엔 아무것도 없어요... 정말로! 👻',
          '이 페이지는 휴가중입니다 🏖️'
        ];
        const randomMsg = messages[Math.floor(Math.random() * messages.length)];
        Toast.info(randomMsg);
      }
    });
  }
});
</script>

{{/layouts/error}}