  <!-- Table Library Selector -->
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="flex items-center justify-between mb-4">
      <h3 class="text-lg font-semibold text-gray-900">문의사항 목록</h3>
      <div class="flex items-center space-x-2">
        <label class="text-sm text-gray-600">테이블 라이브러리:</label>
        <select 
          id="table-library-select" 
          class="text-sm border border-gray-300 rounded px-2 py-1 focus:outline-none focus:ring-2 focus:ring-primary-500"
        >
          <option value="basic">기본 테이블</option>
          <option value="datatables">DataTables</option>
          <option value="tabulator">Tabulator</option>
          <option value="aggrid">AG Grid</option>
          <option value="handsontable">Handsontable</option>
          <option value="gridjs">Grid.js</option>
        </select>
      </div>
    </div>

    <!-- Table Container -->
    <div id="inquiry-table-container" class="w-full">
      <!-- Basic Table (Default) -->
      <div id="basic-table" class="w-full overflow-x-auto">
        <div class="min-w-full bg-white shadow-sm rounded-lg border border-gray-200">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/4">문의사항</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/6">고객</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/8">카테고리</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/8">상태</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/8">우선순위</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/8">등록일</th>
                <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider w-1/8">액션</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              {{#each inquiries}}
              <tr class="hover:bg-gray-50 transition-colors duration-200">
                <td class="px-4 py-4">
                  <div class="max-w-xs">
                    <div class="text-sm font-medium text-gray-900 truncate" title="{{title}}">
                      {{#if (gt title.length 30)}}
                        {{substring title 0 30}}...
                      {{else}}
                        {{title}}
                      {{/if}}
                    </div>
                  </div>
                </td>
                <td class="px-4 py-4">
                  <div class="text-sm text-gray-900">{{customerName}}</div>
                  <div class="text-sm text-gray-500">{{customerEmail}}</div>
                </td>
                <td class="px-4 py-4">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                    {{#if (eq category 'technical')}}기술 지원{{/if}}
                    {{#if (eq category 'billing')}}결제/청구{{/if}}
                    {{#if (eq category 'account')}}계정 관리{{/if}}
                    {{#if (eq category 'general')}}일반 문의{{/if}}
                  </span>
                </td>
                <td class="px-4 py-4">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                    {{#if (eq status 'pending')}}bg-orange-100 text-orange-800{{/if}}
                    {{#if (eq status 'in_progress')}}bg-blue-100 text-blue-800{{/if}}
                    {{#if (eq status 'completed')}}bg-green-100 text-green-800{{/if}}
                    {{#if (eq status 'closed')}}bg-gray-100 text-gray-800{{/if}}">
                    {{#if (eq status 'pending')}}대기{{/if}}
                    {{#if (eq status 'in_progress')}}진행중{{/if}}
                    {{#if (eq status 'completed')}}완료{{/if}}
                    {{#if (eq status 'closed')}}종료{{/if}}
                  </span>
                </td>
                <td class="px-4 py-4">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                    {{#if (eq priority 'low')}}bg-green-100 text-green-800{{/if}}
                    {{#if (eq priority 'medium')}}bg-blue-100 text-blue-800{{/if}}
                    {{#if (eq priority 'high')}}bg-orange-100 text-orange-800{{/if}}
                    {{#if (eq priority 'urgent')}}bg-red-100 text-red-800{{/if}}">
                    {{#if (eq priority 'low')}}낮음{{/if}}
                    {{#if (eq priority 'medium')}}보통{{/if}}
                    {{#if (eq priority 'high')}}높음{{/if}}
                    {{#if (eq priority 'urgent')}}긴급{{/if}}
                  </span>
                </td>
                <td class="px-4 py-4 text-sm text-gray-500 whitespace-nowrap">
                  {{formatDate createdAt}}
                </td>
                <td class="px-4 py-4 text-sm font-medium whitespace-nowrap">
                  <div class="flex space-x-2">
                    <a href="/inquiry/{{id}}" data-turbo-frame="main-content" class="text-primary-600 hover:text-primary-700 transition-colors">보기</a>
                    <a href="/inquiry/{{id}}/edit" data-turbo-frame="main-content" class="text-gray-600 hover:text-gray-700 transition-colors">수정</a>
                  </div>
                </td>
              </tr>
              {{/each}}
              {{#unless inquiries}}
              <tr>
                <td colspan="7" class="px-4 py-8 text-center text-gray-500">
                  <div class="flex flex-col items-center">
                    <i class="fas fa-inbox text-4xl text-gray-300 mb-2"></i>
                    <p class="text-lg">문의사항이 없습니다</p>
                  </div>
                </td>
              </tr>
              {{/unless}}
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Pagination -->
    {{#if (gt totalPages 1)}}
    <div class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6 mt-4">
      <div class="flex-1 flex justify-between sm:hidden">
        {{#if (gt page 1)}}
        <a href="/inquiry?page={{subtract page 1}}" data-turbo-frame="main-content" 
           class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
          이전
        </a>
        {{/if}}
        {{#if (lt page totalPages)}}
        <a href="/inquiry?page={{add page 1}}" data-turbo-frame="main-content" 
           class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
          다음
        </a>
        {{/if}}
      </div>
      <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
        <div>
          <p class="text-sm text-gray-700">
            <span class="font-medium">{{total}}</span>개 중 
            <span class="font-medium">{{multiply (subtract page 1) limit}}{{add 1}}</span> - 
            <span class="font-medium">{{#if (lt (multiply page limit) total)}}{{multiply page limit}}{{else}}{{total}}{{/if}}</span>개 표시
          </p>
        </div>
        <div>
          <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px">
            {{#each (range 1 totalPages)}}
            <a href="/inquiry?page={{this}}"                class="relative inline-flex items-center px-4 py-2 border text-sm font-medium
               {{#if (eq ../page this)}}
                 z-10 bg-primary-50 border-primary-500 text-primary-600
               {{else}}
                 bg-white border-gray-300 text-gray-500 hover:bg-gray-50
               {{/if}}">
              {{this}}
            </a>
            {{/each}}
          </nav>
        </div>
      </div>
    </div>
    {{/if}}
  </div>

