{{!-- 
  재사용 가능한 차트 컨테이너 컴포넌트
  
  @param {string} title - 차트 제목
  @param {string} chartId - 차트 DOM ID (고유해야 함)
  @param {string} height - 차트 높이 (기본: 320px)
  @param {boolean} showControls - 차트 제어 버튼 표시 여부
  @param {string} description - 차트 설명 (선택사항)
--}}

<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
  
  <!-- 차트 헤더 -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6 gap-4">
    <div class="flex-1">
      <h3 class="text-lg font-semibold text-gray-900">{{title}}</h3>
      {{#if description}}
      <p class="text-sm text-gray-600 mt-1">{{description}}</p>
      {{/if}}
    </div>
    
    {{#if showControls}}
    <div class="flex items-center space-x-2 flex-shrink-0">
      <!-- 차트 라이브러리 선택 -->
      <select 
        class="chart-library-select text-sm font-medium px-3 py-1.5 border border-gray-300 rounded-lg bg-white text-gray-700 hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
        data-chart-select="{{chartId}}"
        data-chart="{{chartId}}"
      >
        <option value="chartjs" selected>📦 Chart.js</option>
        <option value="apexcharts">📈 ApexCharts</option>
        <option value="d3" class="d3-option">🎨 D3.js</option>
        <option value="plotly">🔬 Plotly.js</option>
        <option value="echarts">🌏 ECharts</option>
      </select>
      
      <!-- 기타 컨트롤 -->
      <button 
        class="refresh-btn p-2 text-gray-400 hover:text-gray-600 rounded-lg hover:bg-gray-100 transition-colors" 
        title="새로고침"
        data-chart-refresh="{{chartId}}"
      >
        <i class="fas fa-sync-alt"></i>
      </button>
      <button 
        class="fullscreen-btn p-2 text-gray-400 hover:text-gray-600 rounded-lg hover:bg-gray-100 transition-colors" 
        title="전체화면"
        data-chart-fullscreen="{{chartId}}"
      >
        <i class="fas fa-expand"></i>
      </button>
    </div>
    {{/if}}
  </div>
  
  <!-- 차트 컨테이너 -->
  <div class="chart-wrapper" style="position: relative;">
    <div 
      id="{{chartId}}" 
      class="chart-container"
      style="width: 100%; height: {{#if height}}{{height}}{{else}}320px{{/if}}; min-height: 200px;"
      data-chart-id="{{chartId}}"
    >
      <!-- 로딩 상태 -->
      <div class="flex items-center justify-center h-full text-gray-500">
        <div class="text-center">
          <i class="fas fa-spinner fa-spin text-2xl mb-2"></i>
          <p class="text-sm">차트 로딩 중...</p>
        </div>
      </div>
    </div>
  </div>
  
  <!-- 차트 범례/추가 정보 -->
  {{#if showLegend}}
  <div class="mt-4 pt-4 border-t border-gray-200">
    <div id="{{chartId}}-legend" class="chart-legend flex flex-wrap gap-4 text-sm">
      <!-- 범례는 JavaScript에서 동적으로 생성 -->
    </div>
  </div>
  {{/if}}
  
</div>

<!-- 차트 컨트롤 이벤트는 대시보드에서 전역적으로 처리 -->

<style>
.chart-library-select {
  min-width: 140px;
  cursor: pointer;
  transition: all 0.2s ease;
}

.chart-library-select:hover {
  box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
}

.chart-library-select:focus {
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

/* 각 라이브러리별 테마 컬러 */
.chart-library-select[data-library="chartjs"] {
  border-color: #3b82f6;
}

.chart-library-select[data-library="apexcharts"] {
  border-color: #10b981;
}

.chart-library-select[data-library="d3"] {
  border-color: #f59e0b;
}

.chart-library-select[data-library="plotly"] {
  border-color: #8b5cf6;
}

.chart-library-select[data-library="echarts"] {
  border-color: #ef4444;
}

.chart-container canvas,
.chart-container svg,
.chart-container > div {
  max-width: 100%;
  height: auto;
}

/* 차트 로딩 애니메이션 */
@keyframes chartPulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

.chart-loading {
  animation: chartPulse 1.5s infinite;
}

/* Select 드롭다운 스타일링 */
.chart-library-select option {
  padding: 8px;
  font-weight: 500;
}

/* 풀스크린 모드 스타일 - 더 강력한 선택자 */
div.bg-white.chart-fullscreen,
.bg-white.chart-fullscreen {
  position: fixed !important;
  top: 0 !important;
  left: 0 !important;
  right: 0 !important;
  bottom: 0 !important;
  width: 100vw !important;
  height: 100vh !important;
  max-width: none !important;
  max-height: none !important;
  z-index: 9999 !important;
  background: white !important;
  margin: 0 !important;
  padding: 20px !important;
  border-radius: 0 !important;
  box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25) !important;
  overflow: auto !important;
  transform: none !important;
}

.chart-fullscreen .chart-container {
  height: calc(100vh - 120px) !important;
  min-height: calc(100vh - 120px) !important;
}

.chart-fullscreen .chart-wrapper {
  height: calc(100vh - 120px) !important;
}

/* 풀스크린 모드에서 차트 헤더 스타일 조정 */
.chart-fullscreen .flex.flex-col {
  padding: 20px !important;
}

.chart-fullscreen h3 {
  font-size: 1.5rem !important;
}

/* 풀스크린 진입/종료 애니메이션 */
.chart-fullscreen {
  animation: fullscreenEnter 0.3s ease-out;
}

@keyframes fullscreenEnter {
  from {
    opacity: 0;
    transform: scale(0.95);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

/* 풀스크린 모드에서 스크롤바 스타일 */
.chart-fullscreen::-webkit-scrollbar {
  width: 8px;
}

.chart-fullscreen::-webkit-scrollbar-track {
  background: #f1f1f1;
}

.chart-fullscreen::-webkit-scrollbar-thumb {
  background: #c1c1c1;
  border-radius: 4px;
}

.chart-fullscreen::-webkit-scrollbar-thumb:hover {
  background: #a8a8a8;
}

/* 모바일 최적화 */
@media (max-width: 640px) {
  .chart-library-select {
    min-width: 120px;
    font-size: 0.75rem;
  }
  
  .chart-fullscreen .chart-container {
    height: calc(100vh - 100px) !important;
    min-height: calc(100vh - 100px) !important;
  }
  
  .chart-fullscreen .flex.flex-col {
    padding: 15px !important;
  }
}
</style>