{{!-- 
  재사용 가능한 통계 카드 컴포넌트
  
  @param {string} title - 카드 제목
  @param {string} value - 메인 값
  @param {string} change - 변화율 (예: "12%", "-5%")
  @param {string} changeLabel - 변화율 설명 (예: "전월 대비", "어제 대비")
  @param {string} icon - Font Awesome 아이콘 클래스 (예: "fas fa-envelope")
  @param {string} iconBg - 아이콘 배경 색상 클래스 (예: "bg-blue-100")
  @param {string} iconColor - 아이콘 색상 클래스 (예: "text-blue-600")
  @param {boolean} isPositive - 긍정적 변화 여부 (true면 녹색, false면 빨간색)
--}}

<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 hover:shadow-md transition-shadow duration-200">
  <div class="flex items-center justify-between">
    <div class="flex-1">
      <p class="text-sm font-medium text-gray-600">{{title}}</p>
      <p class="text-3xl font-bold text-gray-900 mt-2">{{value}}</p>
      
      {{#if change}}
      <div class="flex items-center mt-2">
        {{#if isPositive}}
          <i class="fas fa-arrow-up text-green-500 text-sm"></i>
          <span class="text-green-600 text-sm font-medium ml-1">{{change}}</span>
        {{else}}
          <i class="fas fa-arrow-down text-red-500 text-sm"></i>
          <span class="text-red-600 text-sm font-medium ml-1">{{change}}</span>
        {{/if}}
        <span class="text-gray-500 text-sm ml-2">{{changeLabel}}</span>
      </div>
      {{/if}}
    </div>
    
    {{#if icon}}
    <div class="w-12 h-12 {{iconBg}} rounded-lg flex items-center justify-center flex-shrink-0">
      <i class="{{icon}} {{iconColor}} text-xl"></i>
    </div>
    {{/if}}
  </div>
</div>